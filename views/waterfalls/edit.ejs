<%- layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Waterfall</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/waterfalls/<%=waterfall._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="waterfall[title]"
                        value="<%= waterfall.title %>" required>
                    <div class="valid-feedback">
                        Looks Great!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="waterfall[location]"
                        value="<%= waterfall.location %>" required>
                    <div class="valid-feedback">
                        Looks Great!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Upload Your Images</label>
                    <input type="file" name="image" id="image" multiple>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="waterfall[description]"
                        required><%= waterfall.description%></textarea>
                    <div class="valid-feedback">
                        Looks Great!
                    </div>
                </div>
                <div class="mb-3">
                    <% waterfall.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% }) %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/waterfalls/<%= waterfall._id%>">Back to Waterfall</a>
        </div>
    </div>